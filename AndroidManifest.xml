            android:name="com.mty.demo.act.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mty.demo.act.DemoActivity" />
        <activity android:name="com.mty.test.animtext.AnimTextActivity" />
        <activity android:name=".act.pullrefresh.ScrollViewActivity" />
